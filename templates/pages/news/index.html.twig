{% extends 'base.html.twig' %}
{% block body %}

        <div class="row flex">
            {% for news in results %}
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-tittle">
                                <h2>{{ news.title }}</h2>
                            </div>
                            <div class="card-text">
                                <p>{{ news.description }}</p>
                                <p>{{ news.author }}</p>
                                
                            </div>

                        </div>
                    </div>
            {% endfor %}
        </div>


{% endblock %}